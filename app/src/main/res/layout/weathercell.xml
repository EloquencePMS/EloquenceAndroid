<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/ivDay"
            android:src="@drawable/clear"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="35dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tvDate"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="tvDay"
            android:id="@+id/tvDay"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/ivDay"
            android:layout_alignEnd="@+id/ivDay"
            android:textColor="@color/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="tvDate"
        android:id="@+id/tvDate"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/ivDay"
        android:layout_alignParentStart="true"
        android:textColor="@color/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tvCondition"
        android:id="@+id/tvCondition"
        android:layout_below="@+id/tvDay"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tvTempHigh"
        android:id="@+id/tvTempHigh"
        android:layout_below="@+id/tvCondition"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tvTempLow"
        android:id="@+id/tvTempLow"
        android:layout_below="@+id/tvTempHigh"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text" />

</RelativeLayout>